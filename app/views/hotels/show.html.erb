

<div class="show-container">
    <div class="show-top">
        <% if @hotel.image_icon? %>
            <%= image_tag @hotel.image_icon.url, class: "show-hotel-img" %>
        <% else %>
            <%= image_tag "test_room.jpg", class: "show-hotel-img" %>
        <% end %>
        <div class="show-reserve-info">
            <p>¥<%= @hotel.price %>/日</p>

            <%= form_with url: new_reserve_info_path, method: "get", local: true do |f| %>
                <%= f.label :start_date, '開始日', class: 'show-form-label' %>
                <%= f.date_field :start_date , class: 'show-form-calender' %>
                <%= f.label :end_date, '終了日', class: 'show-form-label' %>
                <%= f.date_field :end_date , class: 'show-form-calender' %>
                <%= f.label :num_person, '人数', class: 'show-form-label' %>
                <%= f.number_field :num_person , class: 'show-form-count' %>
                <%= f.number_field :hotel_id, value: @hotel.id, class: 'show-form-id' %>
                <%= f.number_field :user_id, value: session[:user_id], class: 'show-form-id' %>
                <%= f.submit "予約する", class: 'btn btn-primary' %>
            <% end %>
        </div>
    </div>

    <div class="show-hotel-info">
        <div class="show-owner-icon-area">
            <% ower_user = User.find_by(id: @hotel.user_id) %>
            <% if ower_user.img? %>
                <%= image_tag ower_user.img.url, class: "show-owner-icon" %>
            <% else %>
                <%= image_tag "default_icon.jpg", class: "show-owner-icon" %>
            <% end %>
        </div>
        <div>
        <p class="show-hotel-name"><%= @hotel.name %></p>
        <p class="show-hotel-place"><%= @hotel.place %></p>
        </div>
    </div>
    <div class="show-hotel-discription">
        <p><%= @hotel.discription %></p>
    </div>
</div>

